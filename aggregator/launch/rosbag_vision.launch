<launch>
  <!-- Variable to input on the teminal window -->
  <arg name = "bag_name" />
  <!-- Rosbag recplay -->
  <node pkg ="rosbag" type="play" name="rosbag" args="-l /home/hearts/$(arg bag_name).bag"/>
  <!-- RVIZ visualisation node -->
  <node pkg="rviz" type="rviz" name="$(anon rviz)" args="/home/hearts/.rviz/orbbec.rviz" />
  <!-- Aggregator node -->
  <node name="aggregator" pkg="aggregator" type="decision_making_cb.py" respawn="true" >
  </node>

</launch>
